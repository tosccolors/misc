<odoo>
	<!-- for segment one -->
   	<record id="view_segment_one_form" model="ir.ui.view">
     <field name="name">segment.one</field>
     <field name="model">segment.one</field>
     <field name="arch" type="xml">
     <form>
     	<sheet>
     		<group>
     			<field name="name" required="1"/>
     		</group>
