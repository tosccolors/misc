    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">
        Click to create a new Segment.
        </p><p>
        </p>
    </field>
    </record>
    
    <menuitem id="menu_segment_one"
    parent="sales_team.menu_sale_config"
