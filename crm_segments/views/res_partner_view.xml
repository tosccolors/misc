<?xml version="1.0" encoding="utf-8"?>
<odoo>
   	<record id="view_partner_form_inherit" model="ir.ui.view">
     <field name="name">res.partner.inherit</field>
     <field name="model">res.partner</field>
     <field name="inherit_id" ref="base.view_partner_form"/>
     <field name="arch" type="xml">
     <xpath expr="//page[@name='sales_purchases']" position="inside">
     		<group string="Sales Segments" name="sale_segment">
		         <field name='segment_one' attrs="{'readonly': [('check_group', '=', False)]}"/>
		         <field name='segment_two' attrs="{'readonly': [('check_group', '=', False)]}"/>
		         <field name='segment_three' attrs="{'readonly': [('check_group', '=', False)]}"/>
		         <field name='segment_four' attrs="{'readonly': [('check_group', '=', False)]}"/>
                 <field name="check_group" invisible="1"/>
	         </group>
     </xpath>
     </field>
     </record>
     
</odoo>