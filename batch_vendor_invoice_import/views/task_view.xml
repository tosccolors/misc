<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_task_form" model="ir.ui.view">
        <field name="model">external.file.task</field>
        <field name="inherit_id" ref="external_file_location.view_task_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="location_id" invisible="1" />
                <field name="user_id"
                       attrs="{'required': [('location_id','=', %(batch_vendor_invoice_import.batch_invoice_import_export_location)d)]}"/>
                <field name="operating_unit_id"/>
            </field>
        </field>
    </record>

    <record id="view_task_tree" model="ir.ui.view">
        <field name="model">external.file.task</field>
        <field name="arch" type="xml">
            <tree name="Tasks">
                <field name="name" select="1"/>
                <field name="method_type"/>
                <field name="filename"/>
                <field name="filepath"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

</odoo>
